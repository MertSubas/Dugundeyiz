    <script>
        // Modal'ı gösterme işlevi
        const openModalLink = document.getElementById('open-modal-link');
        const modalOverlay = document.getElementById('modal-overlay112211');
        const modalContent = document.getElementById('mmodal-content112211');
        const closeModalBtn = document.getElementById('close-modal-btn112211');

        // Modal'ı açma
        openModalLink.addEventListener('click', function (e) {
                        e.preventDefault();
                        modalOverlay.style.display = 'block'; // Modal'ı göster
                    });

        // Modal'ı kapama
        closeModalBtn.addEventListener('click', function () {
                        modalOverlay.style.display = 'none'; // Modal'ı gizle
                    });

        // Modal dışına tıklanırsa modalı kapatma
        document.getElementById("modal-overlay112211").addEventListener("click", function (e) {
                        if (e.target === document.getElementById("modal-overlay112211")) {
                            this.style.display = "none";
                        }
                    });



        document.getElementById('contact-form-custom').addEventListener('submit', function (event) {
            const emailInput = document.getElementById('email');
            const phoneInput = document.getElementById('phone');
            const emailError = document.getElementById('email-error');
            const phoneError = document.getElementById('phone-error');

            // Reset error messages
            emailError.style.display = 'none';
            phoneError.style.display = 'none';

            // Email validation
            const emailPattern = /^[^@@\s]+@@[^@@\s]+\.[^@@\s]+$/;
            if (!emailPattern.test(emailInput.value)) {
                emailError.style.display = 'block';
                event.preventDefault();
            }

            // Phone validation
            const phonePattern = /^\(\d{3}\)-\d{3}-\d{2}-\d{2}$/;
            if (!phonePattern.test(phoneInput.value)) {
                phoneError.style.display = 'block';
                event.preventDefault();
            } else {
                // Reformat phone value for submission (0000000000)
                phoneInput.value = phoneInput.value.replace(/\D/g, '');
                event.preventDefault();
                const formData = {
                    email: emailInput.value,
                    phone: phoneInput.value,
                    name: document.getElementById('name').value,
                    subject: document.getElementById('subject').value,
                    message: document.getElementById('message').value
                };

                // Verileri AJAX ile gönderme
                fetch('/api/services/submit-form', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Form başarıyla gönderildi!');
                            document.getElementById('contact-form-custom').reset();
                        } else {
                            alert('Bir hata oluştu: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                        alert('Form gönderilirken bir hata oluştu.');
                    });
            }
        });

        // Phone input formatting
        document.getElementById('phone').addEventListener('input', function (event) {
            const input = event.target;
            let value = input.value.replace(/\D/g, ''); // Remove all non-digit characters

            // Limit to 10 digits
            if (value.length > 10) {
                value = value.slice(0, 10);
            }

            // Apply formatting: (000)-000-00-00
            const formattedValue = value
                .replace(/^(\d{3})(\d{3})(\d{2})(\d{2})$/, '($1)-$2-$3-$4')
                .replace(/^(\d{3})(\d{3})(\d{2})/, '($1)-$2-$3')
                .replace(/^(\d{3})(\d{3})/, '($1)-$2');

            input.value = formattedValue;
        });

    </script>
