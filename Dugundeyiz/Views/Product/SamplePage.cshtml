@using Dugundeyiz.ViewModels
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model ProductListPageViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiselect Dropdown</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .multiselect-dropdown {
            position: relative;
        }

        .dropdown-menu {
            max-height: 200px;
            overflow-y: auto;
        }

        .selected-items {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }

        .selected-item {
            background-color: #e9ecef;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
        }

            .selected-item span {
                margin-left: 5px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <label for="fruits">Fruits</label>
    <select id="fruits" name="fruits" data-placeholder="Select fruits" multiple data-multi-select>
        <option value="Apple">Apple</option>
        <option value="Banana">Banana</option>
        <option value="Blackberry">Blackberry</option>
        <option value="Blueberry">Blueberry</option>
        <option value="Cherry">Cherry</option>
        <option value="Cranberry">Cranberry</option>
        <option value="Grapes">Grapes</option>
        <option value="Kiwi">Kiwi</option>
        <option value="Mango">Mango</option>
        <option value="Orange">Orange</option>
        <option value="Peach">Peach</option>
        <option value="Pear">Pear</option>
        <option value="Pineapple">Pineapple</option>
        <option value="Raspberry">Raspberry</option>
        <option value="Strawberry">Strawberry</option>
        <option value="Watermelon">Watermelon</option>
    </select>
</body>

</html>
<script>
    const multiselect = new MultiSelect('#fruits', {
        onChange: function (value, text, element) {
            console.log('Change:', value, text);
        }
    });
    setTimeout(() => {
        const selectElement = document.querySelector('#fruits');

        // MultiSelect sınıfının içindeki selected öğelere erişmeye çalışalım
        // Bu örnekte varsayılan olarak MultiSelect sınıfı, veriyi kendi içinde tutabilir
        const selectedValues = multiselect.selectedValues; // Burada selected özelliği kullanılabilir

        if (selectedValues && selectedValues.length > 0) {
            console.log('Selected Values after 15 seconds:', selectedValues);
        } else {
            console.error('No values selected or selected not available.');
        }
    }, 5000); // 15 saniye = 15000 ms
</script>

