                // Şehir seçildiğinde ilçeleri yükle
                $('#cityDropdownMenuList .dropdown-item').click(function (e) {
                    e.preventDefault();
                    districtDropdownMenu.html("İlçe");

                    const cityId = $(this).data('id');
                    $('#cityDropdownList').text($(this).text()); // Seçili şehri göster
                    loadDistricts(cityId);
                });

                // Arama alanında filtreleme
                $('#citySearch').on('input', function () {
                    const searchTerm = normalizeTurkish($(this).val());
                    $('#cityDropdownMenuList .dropdown-item').each(function () {
                        const cityName = normalizeTurkish($(this).text());
                        if (cityName.includes(searchTerm)) {
                            $(this).parent().show(); // Eşleşen öğeleri göster
                        } else {
                            $(this).parent().hide(); // Eşleşmeyen öğeleri gizle
                        }
                    });
                });
            }
        });

        // Türkçe karakterleri normalleştiren fonksiyon
        function normalizeTurkish(text) {
            if (!text) return ""; // Boş metin durumunda kontrol
            return text
                .toLocaleLowerCase('tr-TR') // Türkçe küçük harfe dönüştür
                .replace(/ç/g, 'c')
                .replace(/ğ/g, 'g')
                .replace(/ı/g, 'i')
                .replace(/ö/g, 'o')
                .replace(/ş/g, 's')
                .replace(/ü/g, 'u');
        }

        function loadDistricts(cityId) {
            $.ajax({
                url: `/api/Services/districts/${cityId}`,
                type: "GET",
                success: function (data) {
                    let districtDropdownMenu = $('#districtDropdownMenuList');
                    districtDropdownMenu.empty(); // Temizle

