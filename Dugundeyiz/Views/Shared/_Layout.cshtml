        window.onload = function () {
            // MutationObserver ile widget'taki değişiklikleri izliyoruz
            var targetNode = document.getElementById('google_translate_element');

            // Eğer widget zaten yüklenmişse metni hemen değiştir
            changeTranslateWidgetText();

            // Değişiklikleri izlemek için Observer tanımlıyoruz
            var observer = new MutationObserver(function (mutations) {
                mutations.forEach(function (mutation) {
                    changeTranslateWidgetText();
                });
            });

            // İzleme işlemini başlat
            observer.observe(targetNode, { childList: true, subtree: true });
