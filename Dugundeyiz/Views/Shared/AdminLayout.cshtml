<script>

    $(document).ready(function () {
        // Ana menü tıklandığında açılır/kapalı
        $('#side-menu > li > a').click(function (e) {
            var href = $(this).attr('href');

            // Eğer href boş değilse ve # değilse, yönlendirme olsun
            if (!href || href === '#') {
                e.preventDefault(); // Linkin varsayılan davranışını engelle
            }
            var $submenu = $(this).next('.nav-second-level');
            var $arrow = $(this).find('.arrow');

            if ($submenu.length) {
                $submenu.collapse('toggle');

                // Arrow direction toggle on collapse
                $submenu.on('shown.bs.collapse', function () {
                    $arrow.css('transform', 'rotate(270deg)'); // Aşağı bak
                });

                $submenu.on('hidden.bs.collapse', function () {
                    $arrow.css('transform', 'rotate(0deg)'); // Yukarı bak
                });
            }
        });

        // İkinci seviye menü tıklandığında açılır/kapalı
        $('#side-menu .nav-second-level > li > a').click(function (e) {
            var href = $(this).attr('href');

